// 页面公用元素样式
input,.form-btn,.file-box,select
  display block
  width 100%
  height .52rem
  padding .06rem .12rem
  margin-bottom .4rem
  font-size .28rem
  line-height .28rem
  color #555
  background-color #fff
  background-image none
  border .01rem solid #ccc
  border-radius .04rem
  -webkit-box-shadow inset 0 1px 1px rgba(0,0,0,.075)
  box-shadow inset 0 1px 1px rgba(0,0,0,.075)
  -webkit-transition border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s
  -o-transition border-color ease-in-out .15s,box-shadow ease-in-out .15s
  transition border-color ease-in-out .15s,box-shadow ease-in-out .15s
.form-btn
  text-align center
  line-height .38rem
  letter-spacing 5px
input:focus
  border-color #66afe9
  outline 0
  -webkit-box-shadow inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102,175,233,.6)
  box-shadow inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102,175,233,.6)
.system-title
  padding-top .2rem
  font-size 26px
  text-align center
  color #00a0df
.site-box
  width 100%
  height .52rem
  padding-left 6px
  font-size 28px
  background url(../images/more_unfold.svg) no-repeat right
.site-box option
  font-size 14px
.district-main,.trailing-main
  margin 1.4rem .4rem 0 .4rem
.district li,.trailing li
  font-size 32px
  margin-bottom .56rem
// 跳转a链接按钮样式
.jump-title
  padding 0 .2rem
  color #fff
  border-radius 30px
  background-color #00bb00
  cursor pointer
